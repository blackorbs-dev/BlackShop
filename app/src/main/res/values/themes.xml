<resources>
    <style name="Base.Theme.BlackShop" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/surfaceColor</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/surfaceColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextView</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorAccent">@color/accentColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="textAppearanceTitleLarge">@style/TextHeadline</item>
        <item name="textAppearanceBodyMedium">@style/TextBodyMedium</item>
    </style>

    <style name="Theme.BlackShop" parent="Base.Theme.BlackShop"/>

    <style name="TextHeadline" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AnimatePopupTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
    </style>
    <style name="PopupAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/standard_16</item>
        <item name="android:layout_margin">@dimen/standard_5</item>
        <item name="cardBackgroundColor">@color/surfaceColor</item>
    </style>

    <style name="SnackbarStyle" parent="ThemeOverlay.Material3.Snackbar">
        <item name="backgroundTint">@color/textPrimary</item>
        <item name="android:layout_margin">@dimen/standard_5</item>
        <item name="android:paddingStart">@dimen/standard_5</item>
        <item name="android:paddingEnd">@dimen/standard_5</item>
    </style>

    <style name="SnackbarButton" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/surfaceColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SnackbarTextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/surfaceColor</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>